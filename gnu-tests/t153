. $srcdir/common
split_std_out_err no

must 'cp `bundled_commav b.d/1117,v` $v'

TMPDIR=$wd/nosuch
export TMPDIR
rcsdiff -r1.1 -r1.2 $v \
    && problem 'rcsdiff did not fail on inaccessible TMPDIR'

exit 0

