. $srcdir/common
split_std_out_err no

##
# Check that these programs:
#   ci, co, merge, rcs, rcsdiff, rcsmerge, rlog
# fail when invoked "strangely".
##

$hey set -x

invoke ()
{
    # $1 -- program
    program=$1
    $program $arg && problem "$program invoked $blurb did not fail"
}

full ()
{
    invoke ci
    invoke co
    invoke merge
    invoke rcs
    invoke rcsdiff
    invoke rcsmerge
    invoke rlog
}

##
# * without args
##
arg=
blurb='w/o args'
full

##
# * on /dev/null
##
arg='/dev/null'
blurb="on $arg"
full

##
# * on a system directory
##
arg='/tmp'
blurb="on $arg (not user-owned)"
full

##
# * on $wd (user-owned)
##
arg=$wd
blurb="on $arg (user-owned)"
full

exit 0

# t620 ends here
