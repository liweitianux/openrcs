# (shell-script-mode)

# variables

rout=$wd/rlog.out

# functions

try ()
{
    # $1 -- date spec
    # $2 -- grep pattern (regexp)
    date=$1
    rx=$2
    $hey echo "* ${date}"
    must 'ci -q -l -f -d${date} -mm $w $v'
    must 'rlog -r $v > $rout'
    grep "date: $rx" $rout \
        || problem "date spec '${date}' did not yield '${rx}'"
}

# load-time actions

$hey echo '                                      -*- org -*-'

$hey echo '* prep'
must 'cp `bundled_commav two` $v'
must 'co -l $w $v'

# common-d ends here
