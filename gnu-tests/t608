. $srcdir/common
split_std_out_err no

cp -f `bundled_commav two` $v

$hey echo '   rcs:' `which rcs` '            -*- org -*-'

##
# Check that ‘rcs -m:’ works.
##

must 'co -u $w'
must 'rcs -m: $w'
rlog -r4.21 $w | grep 'empty log message' \
    || problem '‘rcs -m:’ failed to set log message'

exit 0

# t608 ends here
