. $srcdir/common
split_std_out_err

cxc=$wd/,x,

must 'cp `bundled_commav two-with-branch` $v'

chk ()
{
    must 'ci $w'
    test ! -f $cxc \
        || problem "temporary file not temporary: $cxc"
}

##
# Sanity check: Do co/ci (no changes) on trunk.
# (This was working fine.)
##
must 'co -l $w'
chk

##
# Now do it on a branch.
# (This was the regression.)
##
must 'co -l4.20.1.1 $w'
chk

exit 0

# t804 ends here
